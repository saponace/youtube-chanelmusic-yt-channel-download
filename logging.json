{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(levelname)s: %(message)s"
        },
        "full": {
            "format": "%(asctime)s - %(name)s at %(filename)s:%(lineno)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "full",
            "filename": "yt-music-channel-downloader.log",
            "maxBytes": 10000000,
            "backupCount": 5,
            "encoding": "utf8"
        }
    },
    "loggers": {},
    "root": {
        "level": "DEBUG",
        "handlers": ["console", "file"]
    }
}